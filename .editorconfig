# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

[*.py]
max_line_length = 99

[*.md]
# https://github.com/octoenergy/kraken-core/pull/71882
# double-trailing spaces at the end of a line indicate a that a newline should be preserved by markdown
trim_trailing_whitespace = false

[*.txt]
# These are mostly comms
# Trailing whitespace may be significant in .txt files
trim_trailing_whitespace = false

[*.html]
trim_trailing_whitespace = true

[*.rml]
trim_trailing_whitespace = true

[*.sql]
trim_trailing_whitespace = true

[*.tsx]
trim_trailing_whitespace = true

[*.min.*]
insert_final_newline = unset
indent_style = unset

## Notes on why we don't trim whitespace for some common file patterns in Kraken:

[*.sh]
# Not sure whether we trim these or not - would it interfere with here-docs?
trim_trailing_whitespace = false

[*.xsd]
# Not usually hand-edited - often comes from an external source and shouldn't be changed
trim_trailing_whitespace = false

[*schema.graphql]
# Generated
trim_trailing_whitespace = false

[*.svg]
# Not usually hand-edited (although can be) - normally generated by a tool.
trim_trailing_whitespace = false

[{*.yaml,*.yml,*.yaml.template,*.yml.template}]
indent_size = 2

[*.jinja]
indent_size = 2
